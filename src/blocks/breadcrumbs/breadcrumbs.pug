//- Все примеси в этом файле должны начинаться c имени блока (breadcrumbs)

mixin breadcrumbs(mods)

  //- Принимает:
  //-   mods  {string} - список модификаторов

  //- Вызов:
        +breadcrumbs()
          +breadcrumbs-item('Главная', '/home')
          +breadcrumbs-item('Услуги', '/services')
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
      allMods = allMods + ' breadcrumb--' + modsList[i].trim();
      }
    }

  ol.breadcrumbs(class=allMods, aria-label='Breadcrumb', itemscope itemtype='http://schema.org/BreadcrumbList')&attributes(attributes)
    block


mixin breadcrumbs-item(index, text, href, mods)

  //- Принимает:
  //-   text   {string} - содержимое пункта
  //-   href   {string} - ссылка этого пункта (если пустая, то это не ссылка, а span)
  //-   mods   {string} - список модификаторов

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
      allMods = allMods + ' breadcrumbs__item--' + modsList[i].trim();
      }
    }

  li.breadcrumbs__item(class=allMods, itemprop='itemListElement', itemscope itemtype='http://schema.org/ListItem')&attributes(attributes)
    if(typeof(href) !== 'undefined' && href)
      a.breadcrumbs__link(href=href, itemprop='item')
        span.breadcrumbs__name(itemprop='name')!= text
        meta(property='position' content=index)
    else
      span.breadcrumbs__current(itemprop='item')
        span.breadcrumbs__name(itemprop='name')!= text
